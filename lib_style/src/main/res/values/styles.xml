<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme.NoActionBar" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTheme.FullScreen" parent="BaseTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="BaseTheme.ImmersionTheme" parent="BaseTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="BaseTheme.ImmersionTheme.Top" parent="BaseTheme.ImmersionTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
</resources>